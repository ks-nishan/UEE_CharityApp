<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="223dp"
        android:orientation="vertical"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="366dp"
            android:layout_height="151dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img1"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/workshop2"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="291dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ma_det_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is Demo Name"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ma_det_vacname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is School Name"
                    android:textColor="#000"
                    android:textSize="25sp" />


                <TextView
                    android:id="@+id/ma_det_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is Email Name"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/ma_det_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="This is Phone Number"
                    android:textColor="#000"
                    android:textSize="25sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/deleteicon"
                android:layout_width="193dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_delete_24" />

            <ImageView
                android:id="@+id/editicon"
                android:layout_width="176dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_edit_24" />
        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>